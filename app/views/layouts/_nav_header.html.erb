<div class="contain-to-grid small-8">
<nav class="top-bar" data-topbar>
  <ul class="title-area">
  </ul>

  <section class="top-bar-section">
  <ul class="left">
    <li class="image">
      <%= image_tag 'ShadowCut.png',size: "50x50" %>
    </li>
    <li class="active">
      <%= link_to "Steven Bateman", root_path %>
    </li>
  </ul>
  <ul class="right">
    <% @pages.each do |page| %>
        <li class="active"><%= link_to page.title, page_path(page), class: "active" %></li>
    <% end %>
      <% unless current_user.blank? %>
        <% if current_user.admin? %>
           <li class="active"><%= link_to "New Page", new_page_path, class: "active" %></li>
        <% end %>
      <% end %>
    <% if current_user %>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
    <% end %>
  </ul>
  </section>
</nav>
</div>
